{#
/**
 * @file
 * Theme override for a field.
 * Hero Page Title
 */
#}

{% if label_hidden %}
  {% if multiple %}
    <div class="items">
      {% for item in items %}
      {{ item.content }}
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
    <div class="col-sm-6 col-md-5 col-lg-4">
    <h2 class="page-title">{{ item.content }}</h2></div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <h5 class="block_title">{{ label }}</h5>
    {% if multiple %}
      <div class="items">
    {% endif %}
    {% for item in items %}
      <div class="col-sm-6 col-md-5 col-lg-4">
      <h2 class="page-title">{{ item.content }}</h2>
    </div>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
